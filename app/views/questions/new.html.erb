<div class='form-header'>
  <h1 class='form-header-text'>
    問題作成の場
  </h1>
</div>

<%= form_with model: @question, url: questions_path, local: true do |f| %>
  <%= render 'devise/shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">問題入力</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :question, class:"input-default", id:"question", placeholder:"50文字以内で問題を作成しましょう！！", maxlength:"50" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ジャンル</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"age"}) %>
  </div>

  <div class="question-btn">
    <%= f.submit "レッツ出題！！" %>
  </div>
<% end %>